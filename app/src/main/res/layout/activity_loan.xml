<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    tools:context=".Wallet">

    <TextView
        android:id="@+id/loan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/adobe_garamond_pro_bold"
        android:text="Loan Application"
        android:textSize="45sp" />


    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/loan"
        android:layout_marginRight="20dp"
        android:fontFamily="@font/adobe_garamond_pro_regular"
        android:text="Please enter the details below for your loan application"
        android:textSize="15sp" />




    <EditText
        android:id="@+id/fund_date"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="11dp"

        android:layout_marginTop="15dp"
        android:layout_below="@+id/description"
        android:drawableEnd="@drawable/ic_calendar"
        android:background="@drawable/custom_input"
        android:fontFamily="@font/adobe_garamond_pro_regular"
        android:hint="dd/mm/yyyy"
        android:inputType="date"
        android:padding="15dp"
        android:drawableRight="@drawable/ic_calendar" />

    <EditText
        android:id="@+id/repayment_start_date"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@+id/fund_date"
        android:layout_below="@+id/description"
        android:drawableEnd="@drawable/ic_calendar"
        android:background="@drawable/custom_input"
        android:fontFamily="@font/adobe_garamond_pro_regular"
        android:hint="dd/mm/yyyy"
        android:inputType="date"
        android:padding="15dp"
        android:drawableRight="@drawable/ic_calendar" />

    <EditText
        android:id="@+id/loan_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/fund_date"
        android:background="@drawable/custom_input"
        android:fontFamily="@font/adobe_garamond_pro_regular"
        android:hint="@string/amount_min_100_kes"
        android:inputType="number"
        android:padding="15dp" />

    <Spinner
        android:id="@+id/repayment_period"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Repayment Period"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/loan_amount"
        android:background="@drawable/custom_input"
        android:padding="22dp"
        android:drawableEnd="@drawable/ic_arrow_drop_down"
        android:textColor="@android:color/white"
        android:drawableRight="@drawable/ic_arrow_drop_down" />


    <Button
        android:id="@+id/loan_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="65dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/repayment_period"
        android:background="@drawable/button"
        android:fontFamily="@font/adobe_garamond_pro_regular"
        android:text="@string/submit"
        android:textColor="#ffffff"


        />





</RelativeLayout>