<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rotation_linearLayout"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_profile_icon"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="15dp"
            android:text="Member Name:"
            android:fontFamily="@font/adobe_garamond_pro_regular"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/rotation_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="200dp"
            android:text="200 Ksh"
            android:layout_marginTop="15dp"
            android:textSize="15sp"
            android:fontFamily="@font/adobe_garamond_pro_bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="45dp"
            android:text="Rotation Turn:"
            android:fontFamily="@font/adobe_garamond_pro_regular"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/rotation_turn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="200dp"
            android:text="Wallet"
            android:layout_marginTop="45dp"
            android:textSize="15sp"
            android:fontFamily="@font/adobe_garamond_pro_bold"/>

        <TextView
            android:id="@+id/rotation_role"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:text="@string/date"
            android:layout_marginTop="65dp"
            android:textSize="8sp"
            android:fontFamily="@font/adobe_garamond_pro_bold"
            android:layout_marginEnd="20dp" />





    </androidx.cardview.widget.CardView>


</LinearLayout>